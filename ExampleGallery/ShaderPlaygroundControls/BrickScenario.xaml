<UserControl
    x:Class="ExampleGallery.BrickScenario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:brushes="using:ExampleGallery.Brushes"
    mc:Ignorable="d">

    <Grid Loaded="Grid_Loaded">
        <Grid.Background>
            <brushes:MaterialBrush2
                x:Name="BackgroundBrush"
                TextureUri="ms-appx:///Assets/bricks.jpg"
                LightBlendAmount="0.5"
                AmbientAmount="0.15"
                DiffuseAmount="1"
                SpecularAmount="0.1"/>
        </Grid.Background>
        <Button Content="Pick image" Click="Button_Click" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
